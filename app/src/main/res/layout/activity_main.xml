<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Ảnh đại diện sinh viên -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/avt"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/black"/>

    <!-- TextView để hiển thị tên sinh viên -->
    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Võ Nguyễn Xuân Thịnh\n22110429"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <!-- EditText nhập chuỗi -->
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập chuỗi bất kỳ"
        android:layout_marginTop="10dp"/>

    <!-- TextView hiển thị kết quả -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <!-- Button để xử lý chuỗi -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đảo ngược chuỗi"
        android:layout_marginTop="10dp"/>

</LinearLayout>
